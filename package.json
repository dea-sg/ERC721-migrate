{
	"name": "template-solidity-project",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "del 'artifacts'",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "1.0.6",
		"@nomicfoundation/hardhat-network-helpers": "1.0.13",
		"@nomicfoundation/hardhat-toolbox": "2.0.2",
		"@nomiclabs/hardhat-ethers": "2.2.3",
		"@nomiclabs/hardhat-etherscan": "3.1.8",
		"@nomiclabs/hardhat-waffle": "2.0.6",
		"@openzeppelin/hardhat-upgrades": "1.28.0",
		"@typechain/ethers-v5": "11.1.2",
		"@typechain/hardhat": "6.1.6",
		"@types/chai": "4.3.16",
		"@types/dotenv": "8.2.3",
		"@types/mocha": "10.0.6",
		"@types/node": "18.19.112",
		"@typescript-eslint/eslint-plugin": "5.32.0",
		"@typescript-eslint/parser": "5.32.0",
		"chai": "4.4.1",
		"csvtojson": "2.0.10",
		"del-cli": "5.1.0",
		"dotenv": "16.4.5",
		"eslint": "8.57.1",
		"eslint-config-prettier": "8.10.0",
		"eslint-config-xo": "0.43.1",
		"eslint-config-xo-typescript": "0.52.0",
		"ethers": "5.7.2",
		"hardhat": "2.19.5",
		"hardhat-gas-reporter": "1.0.10",
		"husky": "8.0.3",
		"mocha": "10.4.0",
		"prettier": "2.8.8",
		"prettier-plugin-solidity": "1.3.1",
		"solhint": "3.4.1",
		"solidity-coverage": "0.8.12",
		"ts-node": "10.9.2",
		"typechain": "8.3.2",
		"typescript": "5.5.2",
		"csv-writer": "1.6.0"
	},
	"dependencies": {
		"@openzeppelin/contracts": "4.7.3",
		"@openzeppelin/contracts-upgradeable": "4.7.3"
	}
}
